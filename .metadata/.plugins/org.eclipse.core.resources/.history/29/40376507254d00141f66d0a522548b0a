package q8388415.brero_massimiliano.PTNetEditor.tests;

import java.awt.FlowLayout;

import javax.swing.GroupLayout;
import javax.swing.ImageIcon;
import javax.swing.JLabel;

import snippet.ButtListener;

public class PlaceView extends JLabel {
	
	ButtListener listener;
	final ImageIcon icon = new ImageIcon("circle.png");
	private String label;
	
	public String getLabel() {
		return label;
	}

	public void setLabel(String label) {
		this.label = label;
	}

	public PlaceView(String tokenNumber) {
		
		super(tokenNumber);
		init();
		
	}
	
	private void init() {
		
		setBounds(10, 10, 70, 70);
		addMouseMotionListener(listener);
		addMouseListener(listener);
		//butt1.setContentAreaFilled(false);
		setIcon(icon);
		setIconTextGap((int)Math.floor(-getWidth()/1.7));
		setBorder(null);
		setLabel("");
		
		setLayout(new FlowLayout());
		JLabel label = new JLabel("text");
		add(label);
		label.setBounds(+50, -5, 10,20);
		
		
	}

}
